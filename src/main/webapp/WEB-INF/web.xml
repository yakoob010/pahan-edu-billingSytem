<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Pahana Edu Billing System</display-name>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>

    <!-- Servlets -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>dev.yakoob.pahanaedu.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>dev.yakoob.pahanaedu.controller.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>dev.yakoob.pahanaedu.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- Customer Servlet -->
    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>dev.yakoob.pahanaedu.business.customer.servlet.CustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/customer</url-pattern>
        <url-pattern>/customer/*</url-pattern>
    </servlet-mapping>

    <!-- Edit Customer Servlet -->
    <servlet>
        <servlet-name>EditCustomerServlet</servlet-name>
        <servlet-class>dev.yakoob.pahanaedu.business.customer.servlet.EditCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditCustomerServlet</servlet-name>
        <url-pattern>/customer/edit</url-pattern>
    </servlet-mapping>

    <!-- Delete Customer Servlet -->
    <servlet>
        <servlet-name>DeleteCustomerServlet</servlet-name>
        <servlet-class>dev.yakoob.pahanaedu.business.customer.servlet.DeleteCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCustomerServlet</servlet-name>
        <url-pattern>/customer/delete</url-pattern>
    </servlet-mapping>

    <!-- Item Servlet -->
    <servlet>
        <servlet-name>ItemServlet</servlet-name>
        <servlet-class>dev.yakoob.pahanaedu.business.item.servlet.ItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ItemServlet</servlet-name>
        <url-pattern>/item</url-pattern>
        <url-pattern>/item/*</url-pattern>
    </servlet-mapping>

    <!-- Edit Item Servlet -->
    <servlet>
        <servlet-name>EditItemServlet</servlet-name>
        <servlet-class>dev.yakoob.pahanaedu.business.item.servlet.EditItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditItemServlet</servlet-name>
        <url-pattern>/item/edit</url-pattern>
    </servlet-mapping>

    <!-- Delete Item Servlet -->
    <servlet>
        <servlet-name>DeleteItemServlet</servlet-name>
        <servlet-class>dev.yakoob.pahanaedu.business.item.servlet.DeleteItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteItemServlet</servlet-name>
        <url-pattern>/item/delete</url-pattern>
    </servlet-mapping>

    <!-- Order Servlet -->
    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>dev.yakoob.pahanaedu.business.order.servlet.OrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderServlet</servlet-name>
        <url-pattern>/order</url-pattern>
        <url-pattern>/order/*</url-pattern>
    </servlet-mapping>

    <!-- Filters -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>dev.yakoob.pahanaedu.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/dashboard/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/customer/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/item/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/order/*</url-pattern>
    </filter-mapping>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/error/404.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/views/error/500.jsp</location>
    </error-page>

</web-app>
